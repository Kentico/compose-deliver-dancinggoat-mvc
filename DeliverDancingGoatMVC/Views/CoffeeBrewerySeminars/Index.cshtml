@using KenticoCloud.Compose
@model KenticoCloud.Deliver.ContentItem

@{
    ViewBag.Title = Model.System.Name;
    ViewBag.PageType = "LandingPage";
}

<div class="landing-page">
    <div class="container">
        <section class="banner-section" style="background-image: url('@Model.GetAssets("image")[0].Url');">
            <div class="banner-text">
                @Html.Raw(Model.GetString("title"))
            </div>
        </section>
    </div>
    <div class="teaser container">
        @Html.EditableArea("LandingPageTeaser", Model.System.Id)
    </div>
        <div class="steps">
          <div class="container">
              @Html.EditableArea("LandingPageSteps", Model.System.Id)
          </div>
     </div>
    <div class="lectors">
        <div class="container">
            @Html.EditableArea("LandingPageLectors", Model.System.Id)
        </div>
    </div>
    <div class="contacts container">
        @Html.EditableArea("LandingPageContacts", Model.System.Id)
    </div>
</div>

